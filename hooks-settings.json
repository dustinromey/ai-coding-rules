{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {"tools": ["*"]},
        "hooks": [{"type": "command", "command": "./hooks/check-session-start.sh"}]
      },
      {
        "matcher": {"tools": ["Write", "Edit", "MultiEdit"]},
        "hooks": [{"type": "command", "command": "./hooks/check-plan-mode.sh"}]
      },
      {
        "matcher": {"tools": ["Bash"]},
        "hooks": [{"type": "command", "command": "./hooks/check-project-sync.sh"}]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {"tools": ["Edit", "MultiEdit", "Write"]},
        "hooks": [{"type": "command", "command": "./hooks/remind-memory-update.sh"}]
      },
      {
        "matcher": {"tools": ["Bash"]},
        "hooks": [{"type": "command", "command": "./hooks/check-task-completion.sh"}]
      }
    ]
  }
}